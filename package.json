{
  "name": "blog-creator",
  "version": "1.0.0",
  "description": "A blog creator application built witht the MERN stack.",
  "main": "server.js",
  "scripts": {
    "start": "node server/server/.js",
    "devstart": "nodemon server/server.js",
    "blog": "npm start --prefix blog-user-front-end",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run devstart\" \"npm run blog\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client",
    "dev-front": "concurrently \"npm run devstart\" \"npm run client\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Earth-Hominid/blog-maker-api.git"
  },
  "author": "Chris Doll",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Earth-Hominid/blog-maker-api/issues"
  },
  "homepage": "https://github.com/Earth-Hominid/Blog-Creator-API",
  "dependencies": {
    "async": "^3.2.3",
    "bcryptjs": "^2.4.3",
    "colors": "^1.4.0",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "express-async-handler": "^1.2.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.3.3"
  },
  "devDependencies": {
    "concurrently": "^7.2.1",
    "nodemon": "^2.0.16"
  }
}
